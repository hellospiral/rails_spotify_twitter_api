<h1 class="page-header">Spotify Demo</h1>
<%= form_tag artists_path, method: "get", html: { class: "form" } do %>
 <div class="form-group col-xs-4">
   <%= text_field_tag(:artist_name, "", placeholder: "Enter artist name", class: "form-control") %>
 </div>
 <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<h2>Recent favorited tweets:</h2>
<ul>
  <% @testimonies.each do |tweet| %>
    <li><%= tweet.screen_name %> - <%= tweet.content %></li>
  <% end %>
</ul>
